<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            android:background="#8adfdc"
    android:layout_margin="@dimen/generalPadding">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/nombre_de_reportes_en_lista"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/generalPadding"
                android:textSize="@dimen/smallText"
                android:hint="prueba"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        android:background="#2FC9C7">
        <TextView
                android:id="@+id/status_del_reporte_en_lista"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/generalPadding"
                android:hint="prueba"
                android:textSize="@dimen/superSmallText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/superSmallText"
            android:text="@string/more_info"
            android:layout_marginRight="@dimen/generalPadding"/>
    </LinearLayout>
</LinearLayout>