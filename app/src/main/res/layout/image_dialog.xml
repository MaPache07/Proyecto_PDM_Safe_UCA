<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/generalPadding"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/image_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/si"
            android:layout_marginVertical="@dimen/general_padding"
            android:layout_marginHorizontal="@dimen/big_padding"
            android:src="@drawable/camera_action"
            android:backgroundTint="@color/colorWhite"
            android:textColor="@color/colorWhite"/>
        <ImageButton
            android:id="@+id/image_galery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:layout_marginVertical="@dimen/general_padding"
            android:layout_marginHorizontal="@dimen/big_padding"
            android:src="@drawable/image_action"
            android:backgroundTint="@color/colorWhite"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</LinearLayout>