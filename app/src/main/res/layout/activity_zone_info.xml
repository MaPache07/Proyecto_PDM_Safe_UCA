<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".activities.ReportInfoActivity"
              android:orientation="vertical"
              android:background="#313848"
              android:padding="@dimen/activity_vertical_margin">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="#414861">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:text="@string/zone_reports"
                    android:textSize="@dimen/smallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8adfdc"
                    android:padding="@dimen/generalPadding"/>
            <TextView
                    android:id="@+id/zone_info_name"
                    android:textSize="@dimen/smallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/generalPadding"
                    android:textColor="#8adfdc"/>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/generalPadding"
            android:background="#313848"
            android:id="@+id/recycler_in_zone">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>